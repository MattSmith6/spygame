    <fragment
        android:id="@+id/navigation_game"
        android:name="com.example.tabtest.ui.game.GameFragment"
        android:label="@string/title_game"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/navigation_encounter"
